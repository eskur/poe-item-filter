# ------------------------------------------------------------------------
# Eskur's Item Filter
# ------------------------------------------------------------------------

# Section: Basics

Show
    Class "Hideout Doodads" "Microtransactions" "Quest Items"

Show
    Rarity = Unique

# Section: Ultra Rare

Show
    Class "Fishing Rod"
    SetTextColor 0 0 0 # Black
    SetBackgroundColor 255 0 60 # Bright Red
    SetBorderColor 0 0 0 # Black
    SetFontSize 45
    PlayAlertSound 1 100

# Exception for Tabula Rasa
Show
    Rarity = Unique
    LinkedSockets = 6
    BaseType "Simple Robe"

# Exception for normal Sacrificial Garb
Show
    Rarity = Normal
    BaseType "Sacrificial Garb"

Show
    LinkedSockets = 6
    SetTextColor 0 0 0 # Black
    SetBackgroundColor 255 0 60 # Bright Red
    SetBorderColor 0 0 0 # Black
    SetFontSize 45
    PlayAlertSound 1 100

Show
    BaseType "Mirror of Kalandra" "Albino Rhoa Feather"
    SetTextColor 0 0 0 # Black
    SetBackgroundColor 255 0 60 # Bright Red
    SetBorderColor 0 0 0 # Black
    SetFontSize 45
    PlayAlertSound 1 100

# Section: Currency

# Hide Fragments (Transmogrifying Tempest)
