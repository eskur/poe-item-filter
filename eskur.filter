    ItemLevel < 60
    Class "Utility Flasks"
    SetBackgroundColor 9 51 50 # Dark Teal
    SetBorderColor 38 223 216 # Bright Teal

# Heavy belts
Show
    ItemLevel < 40
    BaseType "Heavy Belt"
    SetBackgroundColor 9 51 50 # Dark Teal
    SetBorderColor 38 223 216 # Bright Teal

# IPD Recipe
Show
    ItemLevel <= 60
    BaseType "Rustic Sash"
    Rarity = Normal Magic
    SetBackgroundColor 17 51 13 # Dark Green
    SetBorderColor 74 230 58 # Bright Green

# Show all items until cruel.
Show
    SetBackgroundColor 0 0 0 127 # Semi Transparent
    SetBorderColor 0 0 0 0 # Transparent
    ItemLevel < 40

