    SetBorderColor 242 213 145 # Bright Gold
    SetFontSize 37

# Common
Show
    Class "Currency"
    SetTextColor 242 213 145 # Bright Gold
    SetBackgroundColor 0 0 0 # Black
    SetFontSize 37

# Section: Divination Cards

Hide
    BaseType "The Carrion Crow"
    Class "Divination Card"

Show
    Class "Divination Card"
    SetTextColor 242 213 145 # Bright Gold
    SetBackgroundColor 0 0 0 # Black
    SetFontSize 37

# Section: Maps

Show
    Class "Maps" "Map Fragments"
    SetBackgroundColor 51 23 50 # Dark Pink
    SetBorderColor 242 111 236 # Bright Pink
    SetFontSize 37

# Section: Recipes

# 5 Links
Show
    LinkedSockets = 5
    SetBackgroundColor 17 51 13 # Dark Green
    SetBorderColor 74 230 58 # Bright Green

# Jeweler Recipe
Show
    Sockets = 6
    SetBackgroundColor 17 51 13 # Dark Green
    SetBorderColor 74 230 58 # Bright Green

# Chromatic Recipe
Show
    ItemLevel <= 67
    SocketGroup "RGB"
    SetBackgroundColor 17 51 13 # Dark Green
    SetBorderColor 74 230 58 # Bright Green

Show
    ItemLevel >= 68
    SocketGroup "RGB"
    SetBackgroundColor 17 51 13 # Dark Green
    SetBorderColor 74 230 58 # Bright Green
    # 2x2 1x3 1x4 2x3
    Width <= 2
    Height <= 3

# Chisel Recipe
Show
    Rarity = Normal
    BaseType "Gavel" "Rock Breaker" "Stone Hammer"
    SetBackgroundColor 17 51 13 # Dark Green
    SetBorderColor 74 230 58 # Bright Green

# IPD Recipe
Show
    ItemLevel >= 60
    ItemLevel <= 74
    Rarity = Normal Magic
    BaseType "Rustic Sash"

Show
    ItemLevel >= 75
    Rarity = Normal Magic
    BaseType "Rustic Sash"
    SetBorderColor 30 144 255 # Bright Blue

# Section: Jewelry

Show
    ItemLevel >= 75
    Rarity = Normal Magic
    BaseType "Diamond Ring" "Gold Ring" "Iron Ring" "Prismatic Ring" "Ruby Ring" "Sapphire Ring" "Topaz Ring" "Two-Stone Ring" "Unset Ring"
