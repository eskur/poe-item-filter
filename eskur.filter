# Section: Everything Else

# Itemlevel 75+ rares (Regal Recipe)
Show
    ItemLevel >= 75
    Rarity = Rare
    SetBorderColor 30 144 255 # Bright Blue

# Itemlevel 60-74 rares (Chaos Recipe)
Show
    ItemLevel <= 74
    ItemLevel >= 60
    Rarity = Rare
    SetBorderColor 255 255 119 # Bright Yellow

# Show all rares
Show
    Rarity = Rare

# Section: Leveling

# 4 links
Show
    ItemLevel < 60
    LinkedSockets = 4
    SetBackgroundColor 9 51 50 # Dark Teal
    SetBorderColor 38 223 216 # Bright Teal

# 3 Link Sceptres for the +1 Gem recipe
Show
    ItemLevel < 40
    LinkedSockets = 3
    BaseType "Sceptre"
    SetBackgroundColor 9 51 50 # Dark Teal
    SetBorderColor 38 223 216 # Bright Teal

# 3 Link Armours
Show
    ItemLevel < 30
    LinkedSockets = 3
    Class "Body Armours" "Boot" "Glove" "Helmet"
    SetBackgroundColor 9 51 50 # Dark Teal
    SetBorderColor 38 223 216 # Bright Teal

# Magic Boots (may have movespeed)
Show
    ItemLevel < 30
    Class "Boot"
    Rarity = Magic
    SetBackgroundColor 9 51 50 # Dark Teal
    SetBorderColor 38 223 216 # Bright Teal

# Resist Rings / Iron Ring for use with gem recipe (Gem + Iron Ring = Resist ring)
